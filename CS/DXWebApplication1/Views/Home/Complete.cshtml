@model DXWebApplication1.Controllers.UserModel

@Html.DevExpress().FormLayout(fl => {
    fl.Name = "frmLayout";
    fl.Items.Add(m => m.Name);
    if (!string.IsNullOrEmpty(Model.Avatar)) {
        fl.Items.Add(itemSettings => {
            itemSettings.Caption = "Avatar";
            itemSettings.NestedExtensionType = FormLayoutNestedExtensionItemType.Image;
            var imgSettings = (ImageEditSettings)itemSettigns.NestedExtensionSettings;
            imgSettings.Name = "imgAvatar";
            imgSettings.ImageUrl = Model.Avatar;
            imgSettings.Width = Unit.Pixel(200);
            imgSettings.Height = Unit.Pixel(200);
        });
    }
}).GetHtml()

@Html.ActionLink("<< Home", "Index")
